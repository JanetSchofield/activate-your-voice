---
// Contact Hero Section
// ------------
// Description: A hero section with a contact form

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import Form from '../contact/BasicForm.astro'

// Props
type Props = {
	id?: string
	title?: string
	text?: string
	classes?: string
}
const { id, title, text, classes } = Astro.props
---

<Section id={id} classes={classes}>
	<Row>
		<Col span="12" align="center" classes="mb-8">
			<header class="max-w-2xl mx-auto">
				<h1 set:html={title} class="text-balance" />
				<p class="text-lg leading-relaxed">{text}</p>
			</header>
		</Col>
	</Row>
	<Row>
		<Col span="12" classes="flex justify-center">
			<Form classes="max-w-2xl w-full" />
		</Col>
	</Row>
</Section>
