---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import FAQ from '../components/ui/Accordion.astro'
import Section from '../components/ui/Section.astro'
import Row from '../components/ui/Row.astro'
import Col from '../components/ui/Col.astro'
import Card from '../components/ui/cards/partials/Card.astro'

// Data
import faqData from '../data/json-files/faqData.json'

// - SEO
const SEO = {
	title: 'FAQs | Activate Your Voice',
	description:
		'Find answers to common questions about voice coaching, speech training, and acting lessons at Activate Your Voice.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<!-- Hero Section -->
	<div style="position:relative;width:100vw;max-width:100%;overflow:hidden;height:320px;">
		<img src="/public-speaking.jpg" alt="FAQ banner" style="width:100%;height:100%;object-fit:cover;object-position:center;" />
		<div style="position:absolute;top:0;left:0;width:100%;height:100%;background:rgba(229,231,235,0.5);backdrop-filter:blur(6px);-webkit-backdrop-filter:blur(6px);"></div>
		<div style="position:absolute;top:0;left:0;width:100%;height:100%;display:flex;flex-direction:column;justify-content:center;align-items:center;padding:1rem;">
			<h1 class="text-4xl lg:text-6xl font-bold text-neutral-900 text-center mb-4">FAQs</h1>
			<p class="text-lg lg:text-xl text-neutral-700 text-center max-w-2xl leading-relaxed">
				Frequently asked questions about our services. Canâ€™t see your query? Reach out to us directly in <a href="/contact" class="text-primary-500 hover:underline">contact</a> or by email at <a href="mailto:help@activateyourvoice.co.uk" class="text-primary-500 hover:underline">help@activateyourvoice.co.uk</a>
			</p>
		</div>
	</div>

	<Section id="faq-list" padding="bottom" classes="pt-8 lg:pt-12">
		<Row>
			<Col span="12">
				<Card classes="divide-y divide-neutral-100 dark:divide-neutral-800 shadow-xl shadow-neutral-200/50 dark:shadow-black/20 max-w-6xl mx-auto">
					{faqData.map((faq: any) => (
						<FAQ title={faq.question} text={faq.reply} open={faq.open} />
					))}
				</Card>
			</Col>
		</Row>
	</Section>
</Layout>
