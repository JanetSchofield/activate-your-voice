---
import Layout from '../layouts/Layout.astro'
import ServiceSlider from '../components/blocks/highlights/ServiceSlider.astro'
import ServiceHighlights from '../components/blocks/highlights/ServiceHighlights.astro'
import TestimonialSlider from '../components/blocks/testimonials/TestimonialSlider.astro'
import FinalCTA from '../components/blocks/CTA/FinalCTA.astro'

import homeData from '../data/json-files/home.json';

const SEO = {
title: 'Activate Your Voice | Unlock Your Best Voice',
description: 'Professional voice coaching, speech training, and performance coaching.'
}
---

<Layout title={SEO.title} description={SEO.description}>
<!-- Hero Section -->
<section class="relative h-[calc(100svh-4.9rem)] xl:h-[calc(100svh-5.2rem)] flex items-center lg:items-center overflow-hidden bg-white">
<!-- Background Image with Fade -->
<div class="absolute inset-0 z-0 select-none">
<!-- Desktop Background -->
<img 
src="/news.jpg" 
alt="Professional speaker at Activate Your Voice" 
class="hidden lg:block w-full h-full object-cover object-left" 
/>
<!-- Mobile Background -->
<img 
src="/vocal-coaching-uk.jpg" 
alt="Voice coaching at Activate Your Voice" 
class="block lg:hidden w-full h-full object-cover object-center" 
/>

<!-- Mobile Blue Gradient Overlay (coming heavy from below) -->
<div class="absolute inset-0 bg-gradient-to-t from-[#1B008A]/95 via-[#1B008A]/75 to-[#1B008A]/30 lg:hidden"></div>

<!-- Desktop Overlay to fade image into white background -->
<div class="hidden lg:block absolute inset-0 bg-gradient-to-r from-transparent via-white/40 to-white"></div>
</div>

<div class="container relative z-10 mx-auto px-6 lg:px-12 h-full">
<div class="flex flex-col lg:flex-row items-center justify-center lg:justify-end h-full py-12 lg:py-0">
<!-- Empty space on the left to accommodate the image focus -->
<div class="lg:w-1/3"></div>

<!-- Content Area -->
<div class="lg:w-[50%] text-center lg:text-left mt-auto lg:mt-0 flex flex-col items-center lg:items-start">
<h1 class="text-3xl sm:text-4xl lg:text-3xl 2xl:text-5xl font-light lg:font-bold text-white lg:text-[#1B008A] tracking-tight leading-[1.2] 2xl:leading-[1.2] mb-8 lg:mb-6 max-w-sm lg:max-w-none">
<span class="hidden lg:inline text-inherit" set:html={homeData.heroTitleDesktop}></span>
<span class="inline lg:hidden text-white" set:html={homeData.heroTitleMobile}></span>
</h1>
<p class="hidden lg:block text-xs lg:text-sm 2xl:text-base text-neutral-600 max-w-xl mx-auto lg:mx-0 leading-relaxed font-medium mb-8">
{homeData.heroDescription}
</p>

<div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
<a href={homeData.ctaLink} class="inline-flex items-center justify-center px-8 py-3.5 2xl:px-12 2xl:py-5 text-base lg:text-sm 2xl:text-xl font-bold text-white hover:text-white bg-primary-500 rounded-full hover:bg-[#67b877] transition-all transform hover:scale-105 shadow-xl shadow-black/20 lg:shadow-primary-500/10">
{homeData.ctaText}
</a>
</div>
</div>
</div>
</div>

<!-- Smooth Wavy Transition Section Divider -->
<div class="absolute -bottom-[2px] left-0 w-full overflow-hidden leading-[0] z-10">
<svg class="relative block w-full h-[30px] lg:h-[50px] -scale-x-100" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
<path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V120H0Z" class="fill-white"></path>
</svg>
</div>
</section>

<ServiceSlider />
<ServiceHighlights />
<TestimonialSlider />
<FinalCTA />
</Layout>
