---
import Layout from '../layouts/Layout.astro'

const SEO = {
title: 'Activate Your Voice | Unlock Your Best Voice',
description: 'Professional voice coaching, speech training, and performance coaching.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<!-- Hero Section -->
	<section class="relative h-[calc(100svh-4.9rem)] flex items-center overflow-hidden bg-white">
		<!-- Background Image with Fade -->
		<div class="absolute inset-0 z-0 select-none">
			<img 
				src="/news.jpg" 
				alt="Professional speaker at Activate Your Voice" 
				class="w-full h-full object-cover object-left" 
			/>
			<!-- Overlay to fade image into white background -->
			<div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-white/90 lg:from-transparent lg:via-white/40 lg:to-white"></div>
		</div>

		<div class="container relative z-10 mx-auto px-6 lg:px-12">
			<div class="flex flex-col lg:flex-row items-center justify-end">
				<!-- Empty space on the left to accommodate the image focus -->
				<div class="lg:w-1/3"></div>
				
				<!-- Content on the right -->
				<div class="lg:w-[50%] text-center lg:text-left mt-8 lg:mt-0">
					<h1 class="text-xl sm:text-2xl lg:text-3xl xl:text-3xl font-bold text-[#1B008A] tracking-tight leading-[1.3] mb-4">
						At <span class="text-primary-500">Activate Your Voice</span>, we're dedicated to helping you unlock the full potential of your <span class="text-primary-500">voice</span> and <span class="text-primary-500">communication skills</span>.
					</h1>
					<p class="text-xs lg:text-sm text-neutral-600 max-w-xl mx-auto lg:mx-0 leading-relaxed font-medium mb-5">
						To get started, we're offering a free 15-minute video call to discuss your goals and how we can support you on your journey. Book your free call today and take the first step toward activating your voice!
					</p>
					
					<div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
						<a href="/contact" class="inline-flex items-center justify-center px-5 py-2.5 text-sm font-bold text-white hover:text-white bg-primary-500 rounded-full hover:bg-[#67b877] transition-all transform hover:scale-105 shadow-md shadow-primary-500/10">
							Book Your Free Intro Call
						</a>
					</div>
				</div>
			</div>
		</div>

		<!-- Smooth Wavy Transition Section Divider -->
		<div class="absolute bottom-0 left-0 w-full overflow-hidden leading-[0] z-20">
			<svg class="relative block w-full h-[30px] lg:h-[50px] -scale-x-100" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
				<path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V120H0Z" class="fill-white"></path>
			</svg>
		</div>
	</section>

