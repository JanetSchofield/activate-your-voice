---
// Imports
const { frontmatter } = Astro.props

//Layout Components
import Layout from './Layout.astro'

// Section Components
import BlogPostHero from '../components/blocks/blog/BlogPostHero.astro'

// Content
// - SEO
const SEO = {
	title: `${frontmatter.title} | Activate Your Voice`,
	description: `${frontmatter.description}`
}
---

<Layout title={SEO.title} description={SEO.description}>
	<BlogPostHero
		tags={frontmatter.tags}
		title={frontmatter.title}
		author={frontmatter.author}
		image={frontmatter.image}
		publishDate={frontmatter.pubDate.toLocaleDateString('en-US', {
			year: 'numeric',
			month: 'long',
			day: 'numeric'
		})}
	/>

	<div class="post-body basic-text basic-text--lg">
		<slot />
	</div>
</Layout>

<style>
	.post-body {
		@apply mx-auto max-w-3xl px-6 pt-10 pb-12 lg:pb-24;
	}
</style>
